<%= form_tag(send_message_path) do %>
  <div class = 'form-group'>
      <%= label_tag('to', "To:") %>
      <%= email_field_tag('to', nil, class: 'form-control', required: true) %>
  </div>
  
  <div class = 'form-group'>
      <%= label_tag('subject', "Subject:") %>
      <%= text_field_tag('subject', nil, class: 'form-control') %>
  </div>
  
  <div class = 'form-group'>
      <%= label_tag('message', "Message:") %>
      <%= text_area_tag('message', nil, rows: 10, cols: 25, class: 'form-control') %>
  </div>
<!--ADD SOMETHING FOR ATTACH FILE SOON-->

  <%= submit_tag("Send", class: 'btn btn-primary') %>
<% end %>
